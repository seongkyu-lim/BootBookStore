
{{>layout/header}}
<center>
    <h1>책 등록</h1>

    <div class="col-md-12">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="title">책 제목</label>
                    <input type="text" class="form-control" id="title" placeholder="책 제목을 입력하세요">
                </div>
                <div class="form-group">
                    <label for="author"> 작성자 </label>
                    <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요">
                </div>
                <div class="form-group">
                    <label for="content"> 카테고리 </label>
                    <input type="text" class="form-control" id="category" placeholder="카테고리를 입력하세요">
                </div>
                <div class="form-group">
                    <label for="content"> 이미지 파일명 </label>
                    <input type="text" class="form-control" id="img" placeholder="이미지 파일명을 입력하세요">
                </div>
                <div class="form-group">
                    <label for="content"> 내용 </label>
                    <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-save-products">등록</button>
        </div>
    </div>
</center>
{{>layout/footer}}